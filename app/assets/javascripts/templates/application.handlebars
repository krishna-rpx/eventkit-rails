{{#unless isInSetup}}
	<div class="status-bar"></div>
	<nav class="navbar navbar-fixed-top navbar-inverse" role="navigation">
		<!-- Brand and toggle get grouped for better mobile display -->
		<div class="container-fluid">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>

				{{#link-to 'home' class="navbar-brand"}}
					<img alt="RPX" src="/rpx_logo.png" height="34px">
				{{/link-to}}
			</div>

			<!-- Collect the nav links, forms, and other content for toggling -->
			<div class="collapse navbar-collapse navbar-ex1-collapse">
				<ul class="nav navbar-nav">
					{{#link-to 'home' tagName='li'}}<a href="#">HOME</a>{{/link-to}}
					{{#link-to 'settings' tagName='li'}}<a href="#">SETTINGS</a>{{/link-to}}
					{{#link-to 'detailedSearch' tagName='li'}}<a href="#">DETAILED SEARCH</a>{{/link-to}}
				</ul>
				<form class="navbar-form navbar-right" role="search" {{action 'search' on='submit'}}>
					<div class="form-group">
						{{input type="text" value=query class="form-control" placeholder="Search"}}
					</div>
				</form>
			</div>
		</div><!-- /.navbar-collapse -->
	</nav>
{{/unless}}

<div class="container" role="main">
	{{outlet}}
</div>